<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalPractice.SizesPage"
             Title="SizesPage">
    <StackLayout>
        <Label Text="Memory Size" HorizontalOptions="Center"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button x:Name="memorySizeMinus" Text="-" Clicked="memorySizeMinus_Clicked"/>
            <Label Text="0" x:Name="memorySize"/>
            <Button x:Name="memorySizePlus" Text="+" Clicked="memorySizePlus_Clicked"/>
        </StackLayout>
        <Label Text="Ram Size" HorizontalOptions="Center"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button x:Name="ramSizeMinus" Text="-" Clicked="ramSizeMinus_Clicked"/>
            <Label Text="0" x:Name="ramSize"/>
            <Button x:Name="ramSizePlus" Text="+" Clicked="ramSizePlus_Clicked"/>
        </StackLayout>
        <Label Text="total:" x:Name="totalPrice"/>
    </StackLayout>
</ContentPage>